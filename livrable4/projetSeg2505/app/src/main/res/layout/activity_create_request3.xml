<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRequestActivity3">

    <TextView
        android:id="@+id/titleSendRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Required Information"
        android:textSize="40dp" />

    <ListView
        android:id="@+id/listViewInfoList"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/titleSendRequest" />

    <Button
        android:id="@+id/btnSendRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listViewInfoList"
        android:layout_centerHorizontal="true"
        android:text="Send Request"
        android:textSize="30dp" />

</RelativeLayout>